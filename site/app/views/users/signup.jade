extends auth

block auth
    
  form.form-signin(action="/users", method="post")
    p.error= message
    h2.form-signin-heading Sign up
    input.form-control#name(type='text', name="name", placeholder='Full name', required, value=user.name)
    input.form-control#email(type='text', name="email", placeholder='Email', required, value=user.email)
    input.form-control#username(type='text', name="username", placeholder='User name' , value=user.username)
    input.form-control#password(type='password', name="password", placeholder='Password', required)
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
    p Already have an account? 
      a.show-signup(href="/signin") Sign in